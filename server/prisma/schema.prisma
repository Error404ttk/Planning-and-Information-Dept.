generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  username           String   @unique
  password           String
  name               String
  role               String   @default("ADMIN")
  mustChangePassword Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model NewsArticle {
  id        String   @id @default(cuid())
  title     String
  excerpt   String   @db.Text
  content   String?  @db.Text
  imageUrl  String   @db.LongText
  externalLink String? @db.Text
  date      String
  images    NewsImage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsImage {
  id        String      @id @default(cuid())
  url       String      @db.LongText
  newsId    String
  news      NewsArticle @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  entity      String
  details     String   @db.Text
  performedBy String
  timestamp   DateTime @default(now())
}

model Resource {
  id            String   @id @default(cuid())
  title         String
  category      String
  subcategory   String?
  fileUrl       String
  fileType      String
  downloadCount Int      @default(0)
  createdAt     DateTime @default(now())
}

model SlideImage {
  id        String   @id @default(cuid())
  imageUrl  String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemSetting {
  key   String @id
  value String @db.Text
}

model NavLink {
  id        String   @id @default(cuid())
  name      String
  href      String
  order     Int      @default(0)
  data      String   @db.Text // JSON string containing full NavLink structure including submenu
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GridItem {
  id          String   @id @default(cuid())
  iconName    String
  label       String
  description String?  @db.Text
  href        String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
